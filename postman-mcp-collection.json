{
	"info": {
		"_postman_id": "inky-mcp-collection",
		"name": "Inky MCP API",
		"description": "Postman collection for testing Inky MCP API - List all rules",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "List Tools",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{mcp_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"method\": \"tools/list\",\n  \"params\": {},\n  \"id\": 1\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/mcp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"mcp"
					]
				},
				"description": "List all available MCP tools"
			},
			"response": []
		},
		{
			"name": "List All Rules",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{mcp_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"list_rules\",\n    \"arguments\": {}\n  },\n  \"id\": 2\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/mcp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"mcp"
					]
				},
				"description": "List all rules for the authenticated user"
			},
			"response": []
		},
		{
			"name": "List Rules by Repository",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{mcp_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"list_rules\",\n    \"arguments\": {\n      \"repository_id\": \"{{repository_id}}\"\n    }\n  },\n  \"id\": 3\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/mcp",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"mcp"
					]
				},
				"description": "List rules filtered by repository ID (optional)"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "mcp_token",
			"value": "inky_YOUR_TOKEN_HERE",
			"type": "string"
		},
		{
			"key": "repository_id",
			"value": "",
			"type": "string"
		}
	]
}

